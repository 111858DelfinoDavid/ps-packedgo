# ==============================================
# CONSUMPTION SERVICE - ENVIRONMENT CONFIGURATION
# ==============================================
# Copiar este archivo a .env y completar con valores reales

# Server Configuration
SERVER_PORT=8085

# Database Configuration (Docker)
DATABASE_URL=jdbc:postgresql://CONSUMPTION-db:5432/CONSUMPTION_db
DATABASE_USER=your_CONSUMPTION_db_user_here
DATABASE_PASSWORD=your_secure_CONSUMPTION_db_password_here

# External Services Configuration
AUTH_SERVICE_URL=http://auth-service:8081
USERS_SERVICE_URL=http://users-service:8082
ORDER_SERVICE_URL=http://order-service:8084

# Logging Configuration
LOGGING_LEVEL_CONSUMPTION=DEBUG

# ==============================================
# DOCKER COMPOSE VARIABLES
# ==============================================

# Database Container Configuration
POSTGRES_DB=CONSUMPTION_db
POSTGRES_USER=your_CONSUMPTION_db_user_here
POSTGRES_PASSWORD=your_secure_CONSUMPTION_db_password_here
