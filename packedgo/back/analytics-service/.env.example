# ==============================================
# ANALYTICS SERVICE - ENVIRONMENT CONFIGURATION
# ==============================================
# Copiar este archivo a .env y completar con valores reales

# Server Configuration
SERVER_PORT=8083

# Database Configuration (Docker)
DATABASE_URL=jdbc:postgresql://analytics-db:5432/analytics_db
DATABASE_USER=your_analytics_db_user_here
DATABASE_PASSWORD=your_secure_analytics_db_password_here

# External Services Configuration
AUTH_SERVICE_URL=http://auth-service:8081
USERS_SERVICE_URL=http://users-service:8082
ORDER_SERVICE_URL=http://order-service:8084

# Logging Configuration
LOGGING_LEVEL_ANALYTICS=DEBUG

# ==============================================
# DOCKER COMPOSE VARIABLES
# ==============================================

# Database Container Configuration
POSTGRES_DB=analytics_db
POSTGRES_USER=your_analytics_db_user_here
POSTGRES_PASSWORD=your_secure_analytics_db_password_here