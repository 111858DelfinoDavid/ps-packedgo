# ==============================================
# ORDER SERVICE - ENVIRONMENT CONFIGURATION
# ==============================================
# Copiar este archivo a .env y completar con valores reales

# Server Configuration
SERVER_PORT=8084

# Database Configuration (Docker)
DATABASE_URL=jdbc:postgresql://order-db:5432/order_db
DATABASE_USER=your_order_db_user_here
DATABASE_PASSWORD=your_secure_order_db_password_here

# External Services Configuration
AUTH_SERVICE_URL=http://auth-service:8081
USERS_SERVICE_URL=http://users-service:8082
PAYMENT_SERVICE_URL=http://payment-service:8087

# Frontend URL (for Stripe redirects and email links)
FRONTEND_BASE_URL=http://localhost:3000

# Logging Configuration
LOGGING_LEVEL_ORDER=DEBUG

# ==============================================
# DOCKER COMPOSE VARIABLES
# ==============================================

# Database Container Configuration
POSTGRES_DB=order_db
POSTGRES_USER=your_order_db_user_here
POSTGRES_PASSWORD=your_secure_order_db_password_here