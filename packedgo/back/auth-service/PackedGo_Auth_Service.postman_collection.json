{
	"info": {
		"name": "PackedGo Auth Service",
		"description": "Colección completa para testear los endpoints de autenticación",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "1. Customer Registration",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"username\": \"testuser\",\n    \"email\": \"test@example.com\",\n    \"document\": 12345678,\n    \"password\": \"password123\"\n}"
				},
				"url": {
					"raw": "{{base_url}}/auth/customer/register",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"auth",
						"customer",
						"register"
					]
				},
				"description": "Registrar un nuevo cliente"
			}
		},
		{
			"name": "2. Customer Login",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"document\": 12345678,\n    \"password\": \"password123\"\n}"
				},
				"url": {
					"raw": "{{base_url}}/auth/customer/login",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"auth",
						"customer",
						"login"
					]
				},
				"description": "Login de cliente usando DNI"
			}
		},
		{
			"name": "3. Admin Registration",
			"request": {
