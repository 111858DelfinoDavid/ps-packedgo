				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"username\": \"admin\",\n    \"email\": \"admin@packedgo.com\",\n    \"password\": \"adminpass123\"\n}"
				},
				"url": {
					"raw": "{{base_url}}/auth/admin/register",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"auth",
						"admin",
						"register"
					]
				},
				"description": "Registrar un nuevo administrador"
			}
		},
		{
			"name": "4. Admin Login",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"email\": \"admin@packedgo.com\",\n    \"password\": \"adminpass123\"\n}"
				},
				"url": {
					"raw": "{{base_url}}/auth/admin/login",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"auth",
						"admin",
						"login"
					]
				},
				"description": "Login de administrador usando email"
			}
		},
		{
			"name": "5. Token Validation",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"token\": \"{{jwt_token}}\"\n}"
				},
				"url": {
					"raw": "{{base_url}}/auth/validate",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"auth",
						"validate"
					]
				},
				"description": "Validar un token JWT"
			}
		},
		{
			"name": "6. Refresh Token",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{{refresh_token}}"
				},
				"url": {
					"raw": "{{base_url}}/auth/refresh",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"auth",
						"refresh"
					]
				},
				"description": "Renovar token usando refresh token"
			}
		},
		{
			"name": "7. Logout",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"token\": \"{{jwt_token}}\",\n    \"refreshToken\": \"{{refresh_token}}\"\n}"
				},
				"url": {
					"raw": "{{base_url}}/auth/logout",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"auth",
						"logout"
					]
				},
				"description": "Cerrar sesión"
			}
		},
		{
			"name": "8. Check Username Exists",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/users/exists/username/testuser",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"users",
						"exists",
						"username",
						"testuser"
					]
				},
				"description": "Verificar si un username existe"
			}
		},
		{
			"name": "9. Check Email Exists",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/users/exists/email/test@example.com",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"users",
						"exists",
						"email",
						"test@example.com"
					]
				},
				"description": "Verificar si un email existe"
			}
		},
		{
			"name": "10. Check Document Exists",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/users/exists/document/12345678",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"users",
						"exists",
						"document",
						"12345678"
					]
				},
				"description": "Verificar si un documento existe"
			}
		}
	],
	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					""
				]
			}
		},
		{
			"listen": "test",
			"script": {
				"type": "text/javascript",
				"exec": [
					"// Auto-extract tokens from login responses",
					"if (pm.response.json() && pm.response.json().data) {",
					"    const data = pm.response.json().data;",
					"    if (data.token) {",
					"        pm.environment.set('jwt_token', data.token);",
					"        console.log('JWT Token saved:', data.token);",
					"    }",
					"    if (data.refreshToken) {",
					"        pm.environment.set('refresh_token', data.refreshToken);",
					"        console.log('Refresh Token saved:', data.refreshToken);",
					"    }",
					"}"
				]
			}
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:8081",
			"type": "string"
		}
	]
}