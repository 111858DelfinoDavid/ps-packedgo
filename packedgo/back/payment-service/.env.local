DB_PASSWORD=postgres

# JWT Configuration (debe coincidir con auth-service)
JWT_SECRET=mySecretKey123456789PackedGoAuth2025VerySecureKey

# MercadoPago Configuration - SANDBOX
MERCADOPAGO_ACCESS_TOKEN=APP_USR-1160956444149133-101721-055aec8c374959f568654aeda79ccd31-2932397372
MERCADOPAGO_PUBLIC_KEY=APP_USR-704e26b4-2405-4401-8cd9-fe981e4f70ae

# Webhook URL - CONFIGURAR CON NGROK
# 1. Instalar ngrok: winget install ngrok
# 2. Ejecutar: ngrok http 8085
# 3. Copiar la URL HTTPS generada (ej: https://abc123.ngrok-free.app)
# 4. Pegar aquí: WEBHOOK_URL=https://TU-URL.ngrok-free.app/api/payments/webhook
