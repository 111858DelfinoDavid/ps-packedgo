# ==============================================
# PAYMENT SERVICE - ENVIRONMENT CONFIGURATION
# ==============================================
# Copiar este archivo a .env y completar con valores reales

# Server Configuration
SERVER_PORT=8087

# Database Configuration (Docker)
DATABASE_URL=jdbc:postgresql://payment-db:5432/payment_db
DATABASE_USER=your_payment_db_user_here
DATABASE_PASSWORD=your_secure_payment_db_password_here

# External Services Configuration
AUTH_SERVICE_URL=http://auth-service:8081
ORDER_SERVICE_URL=http://order-service:8084

# Payment Gateway Configuration
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key_here
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here

# Logging Configuration
LOGGING_LEVEL_PAYMENT=DEBUG

# ==============================================
# DOCKER COMPOSE VARIABLES
# ==============================================

# Database Container Configuration
POSTGRES_DB=payment_db
POSTGRES_USER=your_payment_db_user_here
POSTGRES_PASSWORD=your_secure_payment_db_password_here