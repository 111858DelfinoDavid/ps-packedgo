# ========================================
# PackedGo Backend - Variables de Entorno
# ========================================

# JWT Configuration (CRÍTICO: debe ser el mismo en todos los servicios)
JWT_SECRET=your_super_secret_key_change_this_in_production_2024

# Stripe Payment Configuration
STRIPE_API_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# URLs de Servicios (auto-configuradas en Docker)
# No modificar a menos que cambies puertos en docker-compose.yml
AUTH_SERVICE_URL=http://auth-service:8081
USERS_SERVICE_URL=http://users-service:8082
EVENT_SERVICE_URL=http://event-service:8086
ORDER_SERVICE_URL=http://order-service:8084
PAYMENT_SERVICE_URL=http://payment-service:8085
ANALYTICS_SERVICE_URL=http://analytics-service:8087

# Database Configurations
# Auth Service
AUTH_DB_HOST=auth-db
AUTH_DB_PORT=5432
AUTH_DB_NAME=auth_db
AUTH_DB_USER=auth_user
AUTH_DB_PASSWORD=auth_password

# Users Service
USERS_DB_HOST=users-db
USERS_DB_PORT=5432
USERS_DB_NAME=users_db
USERS_DB_USER=users_user
USERS_DB_PASSWORD=users_password

# Event Service
EVENT_DB_HOST=event-db
EVENT_DB_PORT=5432
EVENT_DB_NAME=event_db
EVENT_DB_USER=event_user
EVENT_DB_PASSWORD=event_password

# Order Service
ORDER_DB_HOST=order-db
ORDER_DB_PORT=5432
ORDER_DB_NAME=order_db
ORDER_DB_USER=order_user
ORDER_DB_PASSWORD=order_password

# Payment Service
PAYMENT_DB_HOST=payment-db
PAYMENT_DB_PORT=5432
PAYMENT_DB_NAME=payment_db
PAYMENT_DB_USER=payment_user
PAYMENT_DB_PASSWORD=payment_password

# SMTP Configuration (para envío de emails en auth-service)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@packedgo.com

# Frontend Configuration
FRONTEND_URL=http://localhost:4200

# Spring Profiles
SPRING_PROFILES_ACTIVE=docker

# Logging Level
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_COM_PACKEDGO=DEBUG
