# ==============================================
# EVENT SERVICE - ENVIRONMENT CONFIGURATION
# ==============================================
# Copiar este archivo a .env y completar con valores reales

# Server Configuration
SERVER_PORT=8086

# Database Configuration (Docker)
DATABASE_URL=jdbc:postgresql://event-db:5432/event_db
DATABASE_USER=your_event_db_user_here
DATABASE_PASSWORD=your_secure_event_db_password_here

# External Services Configuration
AUTH_SERVICE_URL=http://auth-service:8081
USERS_SERVICE_URL=http://users-service:8082

# Logging Configuration
LOGGING_LEVEL_EVENT=DEBUG

# ==============================================
# DOCKER COMPOSE VARIABLES
# ==============================================

# Database Container Configuration
POSTGRES_DB=event_db
POSTGRES_USER=your_event_db_user_here
POSTGRES_PASSWORD=your_secure_event_db_password_here